<div class="container">
  <div class="meishiki-new-btn"><%= link_to "新命式保存", new_meishiki_path, class: "btn btn-info" %></div>
   <div id="meishiki-index-area">
    <div class="meishiki-index-title">命式検索</div>
    
    <%= form_tag meishikis_path, :method => 'get' do %>
    
      <p>
        <p>名前：<%= text_field_tag "search[name]", @meishiki, :class => "form-control width-100 height-30 col-search" %></p>
        <%= submit_tag "検索", :name => nil, :class => "btn-search" %><span class="user-count">(<%= @meishikis.count %>/<%= Meishiki.all.count %>)</span>
            
     </p>
    <% end %>    
    
    
    <% @meishikis.each do |meishiki| %>
     <% if meishiki.meishiki.present? %>
       <div class="meishiki-index">
         <%= link_to meishiki.name, meishiki_path(meishiki), class: "meishiki-index-name" %>
         <span class="meishiki-index-category">
           <% if meishiki.meishiki_category_id.present? %>
             <%= MeishikiCategory.find_by(id: meishiki.meishiki_category_id).name %>
           <% else %>
             未設定
           <% end %>
         </span>
         <%= image_tag meishiki.meishiki, class: "meishiki-index-image" %>
       </div>
     <% end %>
    <% end %>
  </div>
</div>

