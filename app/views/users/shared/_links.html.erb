<%- if controller_name != 'sessions' %>
  <%= link_to "ログイン", new_session_path(resource_name), :class => "login", :style => "text-decoration: underline; padding: 20px 10px;" %><br />
<% end %>

<div style="font-weight: 300; padding-top: 20px; font-size: 12px;">- 初めてご予約する前にアカウント作成して下さい -</div>
<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "新規アカウント作成", new_registration_path(resource_name), :class => "btn btn-warning btn-sm" %><br />
<% end %>
<br>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードを忘れた方", new_password_path(resource_name), :class => "forgot-password-link link", :style => "text-decoration: underline;" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_user_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end %>
<% end %>

<style>

  .link:hover {
    opacity: 0.7;
  }
  .forgot-password-link, .login {
     color: #337ab7;
     font-size: 14px;
  }
  
  
  
  
</style>
