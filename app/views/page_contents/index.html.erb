<div class="container">
    <h3 class="page_content-title">文章一覧</h3>
    <div class="text-right">
      <%= link_to "新規登録", new_page_content_path, :class => "btn btn-primary right" %>
    </div>
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th scope="col" class="col-xs-6 col-sm-6 col-md-6 col-lg-6">実ページ</th>
              <th scope="col" class="col-xs-6 col-sm-6 col-md-6 col-lg-6">内容</th>
            </tr>
          </thead>
          <tbody>
            <% @page_contents.each do |page_content| %>
               <tr>
                 <% if page_content.user_type_id.to_i == 1 %>
                  <td><%= link_to "トップページ", "/home/readmust/#{page_content.id}" %></td>
                 <% else %>
                  <td><%= link_to UserType.find_by(id: page_content.user_type_id.to_i).type_name, "/home/readmust/#{page_content.id}" %></td>
                 <% end %>  
                 <td><%= link_to page_content.content.slice(0..150), edit_page_content_path(page_content.id) %>.......</td>
               </tr>
            <% end %>
          </tbody>
        </table>
</div>