
<div class="container new">
<h2>追加</h2>

  <%= form_for @user_type, :url => {:action => "create" }, html: { method: :post } do |f| %>

  <div class="field type_name short">
    <%= f.label :タイプ名 %><br />
    <%= f.text_field :type_name, required: true, :class => "form-control my-form", autocomplete: "type_name" %>
  </div>

  <div class="field price short">
    <%= f.label :金額 %><br />
    <%= f.text_field :price, required: true, :class => "form-control my-form", autocomplete: "price" %>
  </div>

  <div class="actions">
    <%= f.submit "追加", class:"btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
</dir>