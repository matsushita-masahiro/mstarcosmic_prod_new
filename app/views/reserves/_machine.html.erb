<div class="machine-select">
  <!--<p>機械を選んでください <i class="fas fa-arrow-right"></i></p>-->
  <div class="machine-select-area">
      <% if @machine == "h" && user_signed_in? %>
        <%= link_to "その他のメニュー", "/reserves/e/index", class: "btn btn-primary", style: "max-width: none;" %>
      <% elsif @machine == "h" && !user_signed_in? %>
        <%= link_to "その他のメニュー", "/reserves/new_cust_other", class: "btn btn-primary", style: "max-width: none;" %>
      <% elsif @machine == "w" %>
        <%= link_to "Holisticの空き状況", "/reserves/h/index", class: "btn btn-warning", style: "max-width: none;" %>
        <%= link_to "その他", "/reserves/o/index", class: "btn btn-primary", style: "max-width: none;" %>
      <% elsif (@machine == "o" || @machine == "e" || @machine == "b") && user_signed_in? %>
        <%= link_to "Holisticの空き状況", "/reserves/h/index", class: "btn btn-warning", style: "max-width: none;" %>
      <% elsif (@machine == "o" || @machine == "e" || @machine == "b") && !user_signed_in? %>
        <%= link_to "Holisticの空き状況", "/reserves/new_cust", class: "btn btn-warning", style: "max-width: none;" %>
      <% end %>
  </div>
</div>


