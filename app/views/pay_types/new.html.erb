
<div class="container edit">
<h3>支払タイプ登録</h3>


<%= form_for @pay_type, :url => {:action => "create" }, html: { method: :post } do |f| %>

  <div class="field user_type">
     <%= f.label :ユーザータイプ（必須） %><br />
     <%= f.select :user_type_id, UserType.all.map{|t| [t.type_name, t.id]}, :include_blank => true %>
  </div>

  <div class="field pay_name short">
    <%= f.label :支払タイプ（必須）%><br />
    <%= f.text_field :pay_name, required: true, :class => "form-control my-form", autocomplete: "pay_name" %>
  </div>

  <div class="field price short">
    <%= f.label :金額（必須） %><br />
    <%= f.number_field :price, required: true, :class => "form-control my-form", autocomplete: "price" %>
  </div>
  
  <div class="field">
     <%= f.label :Paypalのformタグhtml（必須） %><br />
     <%= f.text_area :paypal_form, :size => "20x10", autofocus: true, required: true, :class => "form-control my-form", autocomplete: "paypal_form" %>
  </div>

  <div class="actions">
    <%= f.submit "追加", class:"btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
</dir>